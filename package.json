{
   "name": "spdxheader",
   "displayName": "SPDX Header",
   "description": "Patch SPDX header in source.",
   "icon": "image/negi.png",
   "type": "module",
   "version": "0.0.1",
   "publisher": "barroit",
   "license": "GPL-3.0-or-later",
   "main": "build/entry.js",
   "engines": {
      "vscode": "^1.74.0"
   },
   "categories": [
      "Other"
   ],
   "repository": {
      "type": "git",
      "url": "git+ssh://git@github.com:barroit/spdxheader.git"
   },
   "contributes": {
      "configuration": {
         "type": "object",
         "properties": {
            "spdxheader.shebang": {
               "type": "object",
               "default": {
                  "python": "/usr/bin/python3",
                  "sh": {
                     "bash":  "/bin/bash",
                     "posix": "/bin/sh",
                     "zsh":   "/bin/zsh"
                  }
               }
            },
            "spdxheader.spdx": {
               "type": "object",
               "default": {
                  "*":     "#",
                  "c":     "//",
                  "h":     "/* {} */",
                  "html":  "<!-- {} -->",
                  "java":  "//",
                  "jsonc": "/* {} */",
                  "js":    "/* {} */",
                  "rst":   ".."
               }
            },
            "spdxheader.copyright": {
               "type": "object",
               "default": {
                  "whitelist": [
                     "c",
                     "h",
                     "html",
                     "java",
                     "js",
                     "jsx",
                     "python",
                     "ts",
                     "tsx"
                  ],
                  "format": {
                     "*": [
                        "/*",
                        " * {}",
                        " */"
                     ],
                     "html": [
                        "<!--",
                        "  -- {}",
                        "  -->"
                     ],
                     "python": [
                        "#",
                        "# {}",
                        "#"
                     ]
                  }
               }
            }
         }
      },
      "commands": [
         {
            "command": "spdxheader.add",
            "title": "add header (select)",
            "category": "spdx",
            "enablement": "workbenchState != empty && activeEditor =~ /text(File|Resource)Editor$/"
         },
         {
            "command": "spdxheader.addef",
            "title": "add header",
            "category": "spdx",
            "enablement": "workbenchState != empty && activeEditor =~ /text(File|Resource)Editor$/"
         },
         {
            "command": "spdxheader.update",
            "title": "update header",
            "category": "spdx",
            "enablement": "workbenchState != empty && activeEditor =~ /text(File|Resource)Editor$/"
         },
         {
            "command": "spdxheader.move-ws",
            "title": "move license id (workspace)",
            "category": "spdx",
            "enablement": "workbenchState != empty"
         },
         {
            "command": "spdxheader.update-ws",
            "title": "update header (workspace)",
            "category": "spdx",
            "enablement": "workbenchState != empty"
         }
      ],
      "menus": {
         "editor/context": [
            {
               "submenu": "spdxheader",
               "group": "9_spdxheader",
               "when": "workbenchState != empty"
            }
         ],
         "spdxheader": [
            {
               "command": "spdxheader.add",
               "group": ".",
               "when": "activeEditor =~ /text(File|Resource)Editor$/"
            },
            {
               "command": "spdxheader.addef",
               "group": ".",
               "when": "activeEditor =~ /text(File|Resource)Editor$/"
            },
            {
               "command": "spdxheader.update",
               "group": ".",
               "when": "activeEditor =~ /text(File|Resource)Editor$/"
            },
            {
               "command": "spdxheader.move-ws",
               "group": "ws"
            },
            {
               "command": "spdxheader.update-ws",
               "group": "ws"
            }
         ]
      },
      "submenus": [
         {
            "id": "spdxheader",
            "label": "SPDX Header"
         }
      ]
   }
}

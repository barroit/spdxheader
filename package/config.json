dnl
"spdxheader.shebang": {
   "type": "object",
   "description": "Shebang line applies only to sources whose language or dnl
file extension matches a listed key. Value may be a program name. If value dnl
is an object, spdxheader shows a program selection menu.",
   "default": {
      "python": "/usr/bin/python3",
      "sh": {
         "bash":  "/bin/bash",
         "posix": "/bin/sh",
         "zsh":   "/bin/zsh"
      }
   }
},
"spdxheader.spdx": {
   "type": "object",
   "description": "SPDX line applies to all sources. If no matching key is dnl
found, * is used as a fallback. Value is used as header format, where {} is dnl
replaced with the SPDX license identifier. If {} is missing, identifier is dnl
appended to the end.",
   "default": {
      "*":     "#",
      "c":     "//",
      "h":     "/* {} */",
      "html":  "<!-- {} -->",
      "java":  "//",
      "jsonc": "/* {} */",
      "js":    "/* {} */",
      "rst":   ".."
   }
},
"spdxheader.copyright": {
   "type": "object",
   "description": "Copyright notice applies only to sources whose language dnl
or file extension matches a listed key, and passes the spdxheader.dnl
copyright_enabled check. If no matching key is found, * is used as a dnl
fallback. The value is used as the header format, where {} is replaced with dnl
the SPDX license identifier. {} is required.",
   "default": {
      "*": [
         "/*",
         " * {}",
         " */"
      ],
      "html": [
         "<!--",
         "  -- {}",
         "  -->"
      ],
      "python": [
         "#",
         "# {}",
         "#"
      ]
   }
},
"spdxheader.copyright_enabled": {
   "type": "object",
   "markdownDescription": "Copyright notice applies only to sources whose dnl
language or file extension matches a key listed here. Entries must be arrays dnl
of [globs](https://www.npmjs.com/package/picomatch`#'globbing-features) that dnl
mark files to ignore.",
   "default": {
      "c": [],
      "h": [],
      "html": [],
      "java": [],
      "js": [],
      "jsx": [],
      "python": [],
      "ts": [],
      "tsx": []
   }
}
